<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <EditText
        android:id="@+id/input_NomeEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:inputType="textPersonName"
        android:hint="Nome dell'evento"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/dateStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_dateStart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:padding="12dp"
        android:text="Seleziona la data di inizio dell'evento"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/timeStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_timeStart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:padding="12dp"
        android:text="Seleziona l'ora di inizio dell'evento"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/dateEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_dateEnd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:padding="12dp"
        android:text="Seleziona la data di termine dell'evento"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/timeEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_timeEnd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:padding="12dp"
        android:text="Seleziona l'ora di termine dell'evento"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/input_indirizzo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:inputType="textPersonName"
        android:hint="Indirizzo"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/input_Descrizione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:inputType="textPersonName"
        android:hint="Descrizione"
        android:layout_gravity="center_horizontal"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_addEvent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:padding="12dp"
        android:text="Aggiungi evento"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>